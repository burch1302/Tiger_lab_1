let

    function read_unsigned() : int =
    let
        var c : string := getchar()
        var n : int := 0
        var ok : int := 1
    in
        while c <> "" & c <> "\n" do (
            if ord(c) < ord("0") | ord(c) > ord("9") then
                ok := 0
            else
                n := n * 10 + (ord(c) - ord("0"));
            c := getchar()
        );
        if ok = 1 then n else -1
    end
    var a : int := read_unsigned()
in
    print_int(a * 2);
    print("\n")
end